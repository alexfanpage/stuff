doctype
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/font-awesome.css' rel='stylesheet')
    link(href='/css/animate.css' rel='stylesheet')
    link(href='/css/style.css' rel='stylesheet')
  body.gray-bg
    .middle-box.text-center.loginscreen.animated.fadeInDown
      div
        div
          h1.logo-name PHY
        h3 Welcome to Phyramid+
        p Perfectly designed and precisely preparared for any market. Feel Me?
        p Login in. To see it in action.
        .error
          p #{error}
        form.m-t(method='post' role='form' action='#')
          .form-group
            input.form-control(type='text' placeholder='Email' name='email' required='' autofocus)
          .form-group
            input.form-control(type='password' placeholder='Password' name='password' required='')
          button.btn.btn-primary.block.full-width.m-b(type='submit') Login
          p.text-muted.text-center
            small Do not have an account?
          a.btn.btn-sm.btn-white.btn-block(href='/register') Create an account
