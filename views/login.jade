doctype
html
  head
    title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/login.css')
  body
    .container
      .row
        .content.col-sm-6.col-md-4.col-md-offset-4
          .panel.panel-default
            .panel-heading
              h1 #{title}
            .error
              p #{error}
            .panel-body
              form(method="post")#login-form
                fieldset
                  .row.center-block
                    img.profile-img(src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="imagine")
                  .row
                    .col-sm-12.col-md-10.col-md-offset-1 
                      .form-group
                        .input-group
                          span.input-group-addon
                            i.glyphicon.glyphicon-user
                          input.form-control(type="text", name="email", id="email", placeholder="Email address", autofocus)
                      .form-group
                        .input-group
                          span.input-group-addon
                            i.glyphicon.glyphicon-lock
                          input.form-control(type="password", name="password", id="password", placeholder="Password", autofocus)
                      .form-group.centered
                        input.btn-lg.btn-primary.btn-lock(type="submit", value="Sign In")
                  .panel-footer
                    div.btm-links
                      a(href='/register')#create-account Create An Account